        <script>
            function getRuleProperty(element, styleName) {
                var property;
                var cssRules = document.styleSheets[0].cssRules;
                for (var i = 0; i < cssRules.length; i++) {
                    if (cssRules[i].selectorText === element) {
                        return cssRules[i].style[styleName];
                    }
                }
            }
            function openTab(tabName) {
                var tabs = document.getElementsByClassName("tab");
                var buttons = document.getElementsByClassName("tab_button");
                var defaultColor = getRuleProperty('.tab_button', 'background-color');
                for (var i = 0; i < buttons.length; i++) {
                    tabs[i].style.display = "none";
                }
                var button = `${tabName}_button`;
                document.getElementById(tabName).style.display = "block";
            }
